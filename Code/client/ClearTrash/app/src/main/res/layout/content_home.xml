<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="6dp"
    android:paddingRight="6dp"
    android:paddingTop="6dp"
    android:paddingBottom="6dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:background="@drawable/homeimage"
    tools:showIn="@layout/app_bar_cthome" tools:context="com.iwms.cleartrash.HomeActivity">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:isScrollContainer="true"
        android:background="@android:color/transparent"
        android:fadeScrollbars="true"
        android:id="@+id/scrollView">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:id="@+id/linearLayout1"
        android:layout_marginTop="2dp"
        android:padding="20dp"
        android:background="@drawable/linearstyle"
        android:clickable="true">

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="fill_parent"
            android:id="@+id/hhGarbageButton"
            android:focusable="false"
            android:background="@drawable/household_garbage"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:textColor="#000000"
            android:text="House Hold Garbage"
            android:focusable="false"
            android:paddingLeft="40dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:id="@+id/linearLayout2"
        android:layout_below="@+id/linearLayout1"
        android:layout_marginTop="2dp"
        android:padding="20dp"
        android:background="@drawable/linearstyle">

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="fill_parent"
            android:id="@+id/bulkGarbageButton"
            android:background="@drawable/bulk_garbage"/>

        <TextView
            android:layout_width="160dp"
            android:layout_height="fill_parent"
            android:textColor="#000000"
            android:text="Bulk Garbage"
            android:paddingLeft="40dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:id="@+id/linearLayout3"
        android:layout_below="@+id/linearLayout2"
        android:layout_marginTop="2dp"
        android:padding="20dp"
        android:background="@drawable/linearstyle">

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="fill_parent"
            android:id="@+id/spotGarbageButton"
            android:background="@drawable/spot_garbage"/>

        <TextView
            android:layout_width="160dp"
            android:layout_height="fill_parent"
            android:textColor="#000000"
            android:text="Spot A Garbage"
            android:paddingLeft="40dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:id="@+id/linearLayout4"
        android:layout_below="@+id/linearLayout3"
        android:layout_marginTop="2dp"
        android:padding="20dp"
        android:background="@drawable/linearstyle">

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="fill_parent"
            android:id="@+id/registerVolunteerButton"
            android:background="@drawable/volunteer"/>
        <TextView
            android:layout_width="160dp"
            android:layout_height="fill_parent"
            android:textColor="#000000"
            android:text="Volunteers Point"
            android:paddingLeft="40dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:id="@+id/linearLayout5"
        android:layout_below="@+id/linearLayout4"
        android:layout_marginTop="2dp"
        android:padding="20dp"
        android:background="@drawable/linearstyle"
        android:weightSum="1">

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="fill_parent"
            android:id="@+id/knowSegregationButton"
            android:background="@drawable/practise_waste_management"/>
        <TextView
            android:layout_width="160dp"
            android:layout_height="fill_parent"
            android:textColor="#000000"
            android:text="Waste Segregation Tutorials"
            android:paddingLeft="40dp"
            android:layout_weight="0.99" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:id="@+id/linearLayout6"
        android:layout_below="@+id/linearLayout5"
        android:layout_marginTop="2dp"
        android:padding="20dp"
        android:background="@drawable/linearstyle">

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="fill_parent"
            android:id="@+id/checkmyPointsButton"
            android:background="@drawable/my_points"/>

        <TextView
            android:layout_width="160dp"
            android:layout_height="fill_parent"
            android:textColor="#000000"
            android:text="My Liquids"
            android:paddingLeft="40dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:id="@+id/linearLayout7"
        android:layout_below="@+id/linearLayout6"
        android:layout_marginTop="2dp"
        android:padding="20dp"
        android:background="@drawable/linearstyle">

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="fill_parent"
            android:id="@+id/registerComplaintButton"
            android:background="@drawable/suggestions"/>

        <TextView
            android:layout_width="160dp"
            android:layout_height="fill_parent"
            android:textColor="#000000"
            android:text="Complaint Box"
            android:paddingLeft="40dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:id="@+id/linearLayout8"
        android:layout_below="@+id/linearLayout7"
        android:layout_marginTop="2dp"
        android:padding="20dp"
        android:background="@drawable/linearstyle">

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="fill_parent"
            android:id="@+id/promotionsButton"
            android:background="@drawable/promotions" />

        <TextView
            android:layout_width="160dp"
            android:layout_height="fill_parent"
            android:textColor="#000000"
            android:text="Promotions"
            android:paddingLeft="40dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:id="@+id/linearLayout9"
        android:layout_below="@+id/linearLayout8"
        android:layout_marginTop="2dp"
        android:padding="20dp"
        android:background="@drawable/linearstyle">

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="fill_parent"
            android:id="@+id/donateUsedItemsButton"
            android:background="@drawable/donations" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:textColor="#000000"
            android:text="Donate Used Items"
            android:paddingLeft="40dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:id="@+id/linearLayout10"
        android:layout_below="@+id/linearLayout9"
        android:layout_marginTop="2dp"
        android:padding="20dp"
        android:background="@drawable/linearstyle">

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="fill_parent"
            android:id="@+id/practiseWasteSegregationButton"
            android:background="@drawable/practise_waste_management" />

        <TextView
            android:layout_width="160dp"
            android:layout_height="fill_parent"
            android:textColor="#000000"
            android:text="Practise Waste Segregation"
            android:paddingLeft="40dp"
            android:layout_weight="0.74"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:id="@+id/linearLayout11"
        android:layout_below="@+id/linearLayout10"
        android:layout_marginTop="2dp"
        android:padding="20dp"
        android:background="@drawable/linearstyle">

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="fill_parent"
            android:id="@+id/referFriendButton"
            android:background="@drawable/refer_friends" />

        <TextView
            android:layout_width="160dp"
            android:layout_height="fill_parent"
            android:textColor="#000000"
            android:text="Refer a Friend"
            android:paddingLeft="40dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:id="@+id/linearLayout12"
        android:layout_below="@+id/linearLayout11"
        android:layout_marginTop="2dp"
        android:padding="20dp"
        android:background="@drawable/linearstyle">

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="fill_parent"
            android:id="@+id/suggestionsButton"
            android:background="@drawable/suggestions" />

        <TextView
            android:layout_width="160dp"
            android:layout_height="fill_parent"
            android:textColor="#000000"
            android:text="Suggestions"
            android:paddingLeft="40dp"/>

    </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
