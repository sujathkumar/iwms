<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:background="@drawable/background"
    tools:showIn="@layout/app_bar_cthome" tools:context="com.iwms.cleartrash.ClearTrashHomeActivity">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:isScrollContainer="true"
        android:background="@android:color/transparent"
        android:fadeScrollbars="true"
        android:id="@+id/scrollView">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editText"
                android:text="Select your Service"
                android:background="@android:color/transparent"
                android:textColor="#000000"
                android:textSize="30dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="80dp"
        android:id="@+id/linearLayout1"
        android:layout_marginTop="60dp"
        android:padding="20dp"
        android:background="@drawable/linearlayout">

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/hhGarbageButton"
            android:background="@drawable/buttonhhgarbage"/>

        <TextView
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:textColor="#000000"
            android:text="House Hold Garbage"
            android:paddingTop="10dp"
            android:paddingLeft="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="80dp"
        android:id="@+id/linearLayout2"
        android:layout_below="@+id/linearLayout1"
        android:layout_marginTop="2dp"
        android:padding="20dp"
        android:background="@drawable/linearlayout">

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/bulkGarbageButton"
            android:background="@drawable/bulk_garbage"/>

        <TextView
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:textColor="#000000"
            android:text="Bulk Garbage"
            android:paddingTop="10dp"
            android:paddingLeft="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="80dp"
        android:id="@+id/linearLayout3"
        android:layout_below="@+id/linearLayout2"
        android:layout_marginTop="2dp"
        android:padding="20dp"
        android:background="@drawable/linearlayout">

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/spotGarbageButton"
            android:background="@drawable/buttonspotgarbage"/>

        <TextView
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:textColor="#000000"
            android:text="Spot A Garbage"
            android:paddingTop="10dp"
            android:paddingLeft="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="80dp"
        android:id="@+id/linearLayout4"
        android:layout_below="@+id/linearLayout3"
        android:layout_marginTop="2dp"
        android:padding="20dp"
        android:background="@drawable/linearlayout">

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/registerVolunteerButton"
            android:background="@drawable/buttonvolunteer"
            />
        <TextView
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:textColor="#000000"
            android:text="Volunteers Point"
            android:paddingTop="10dp"
            android:paddingLeft="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="80dp"
        android:id="@+id/linearLayout5"
        android:layout_below="@+id/linearLayout4"
        android:layout_marginTop="2dp"
        android:padding="20dp"
        android:background="@drawable/linearlayout">

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/knowSegregationButton"
            android:background="@drawable/know_more_about_segregration"        />
        <TextView
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:textColor="#000000"
            android:text="Waste Segregation Tutorials"
            android:paddingTop="9dp"
            android:paddingLeft="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="80dp"
        android:id="@+id/linearLayout6"
        android:layout_below="@+id/linearLayout5"
        android:layout_marginTop="2dp"
        android:padding="20dp"
        android:background="@drawable/linearlayout">

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/checkmyPointsButton"
            android:background="@drawable/buttonpoint"/>

        <TextView
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:textColor="#000000"
            android:text="My Liquids"
            android:paddingTop="10dp"
            android:paddingLeft="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="80dp"
        android:id="@+id/linearLayout7"
        android:layout_below="@+id/linearLayout6"
        android:layout_marginTop="2dp"
        android:padding="20dp"
        android:background="@drawable/linearlayout">

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/registerComplaintButton"
            android:background="@drawable/register_complaint"/>

        <TextView
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:textColor="#000000"
            android:text="Complaint Box"
            android:paddingTop="10dp"
            android:paddingLeft="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="80dp"
        android:id="@+id/linearLayout8"
        android:layout_below="@+id/linearLayout7"
        android:layout_marginTop="2dp"
        android:padding="20dp"
        android:background="@drawable/linearlayout">

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/promotionsButton"
            android:background="@drawable/promotions" />

        <TextView
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:textColor="#000000"
            android:text="Promotions"
            android:paddingTop="10dp"
            android:paddingLeft="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="80dp"
        android:id="@+id/linearLayout9"
        android:layout_below="@+id/linearLayout8"
        android:layout_marginTop="2dp"
        android:padding="20dp"
        android:background="@drawable/linearlayout">

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/donateUsedItemsButton"
            android:background="@drawable/donations" />

        <TextView
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:textColor="#000000"
            android:text="Donate Used Items"
            android:paddingTop="10dp"
            android:paddingLeft="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="80dp"
        android:id="@+id/linearLayout10"
        android:layout_below="@+id/linearLayout9"
        android:layout_marginTop="2dp"
        android:padding="20dp"
        android:background="@drawable/linearlayout">

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/practiseWasteSegregationButton"
            android:background="@drawable/practise_waste_management" />

        <TextView
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:textColor="#000000"
            android:text="Practise Waste Segregation"
            android:paddingTop="7dp"
            android:paddingLeft="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="80dp"
        android:id="@+id/linearLayout11"
        android:layout_below="@+id/linearLayout10"
        android:layout_marginTop="2dp"
        android:padding="20dp"
        android:background="@drawable/linearlayout">

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/referFriendButton"
            android:background="@drawable/refer_friends" />

        <TextView
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:textColor="#000000"
            android:text="Refer a Friend"
            android:paddingTop="10dp"
            android:paddingLeft="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="80dp"
        android:id="@+id/linearLayout12"
        android:layout_below="@+id/linearLayout11"
        android:layout_marginTop="2dp"
        android:padding="20dp"
        android:background="@drawable/linearlayout">

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/suggestionsButton"
            android:background="@drawable/suggestions" />

        <TextView
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:textColor="#000000"
            android:text="Suggestions"
            android:paddingTop="10dp"
            android:paddingLeft="20dp"/>

    </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
