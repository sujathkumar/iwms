<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:isScrollContainer="true"
        android:background="@android:color/transparent"
        android:fadeScrollbars="true"
        android:id="@+id/scrollView">
   <RelativeLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:text="Select your Service"
        android:background="@android:color/transparent"
        android:padding="10dp"
        android:textColor="#000000"
        android:textSize="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageButton
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:id="@+id/hhGarbageButton"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="0dp"
            android:background="@drawable/buttonhhgarbage"/>

        <TextView
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:layout_marginTop="180dp"
            android:layout_marginLeft="-150dp"
            android:textColor="#000000"
            android:text="House Hold Garbage"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <ImageButton
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:id="@+id/bulkGarbageButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="170dp"
        android:background="@drawable/bulk_garbage"
        />
    <TextView
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="-130dp"
        android:textColor="#000000"
        android:text="Bulk Garbage"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <ImageButton
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:id="@+id/spotGarbageButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:text="Spot A Garbage"
        android:layout_marginTop="230dp"
        android:layout_marginLeft="0dp"
        android:background="@drawable/buttonspotgarbage"/>

        <TextView
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:layout_marginTop="300dp"
            android:layout_marginLeft="-130dp"
            android:textColor="#000000"
            android:text="Spot A Garbage"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:background="@android:color/transparent">

    <ImageButton
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:id="@+id/registerVolunteerButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textColor="#FFFFFF"
        android:text="Volunteers Point"
        android:layout_marginTop="230dp"
        android:layout_marginLeft="160dp"
        android:background="@drawable/buttonvolunteer"
        />
        <TextView
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:layout_marginTop="300dp"
            android:layout_marginLeft="-130dp"
            android:textColor="#000000"
            android:text="Volunteers Point"/>
    </LinearLayout>

    <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">

       <ImageButton
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:id="@+id/knowSegregationButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textColor="#FFFFFF"
        android:layout_marginTop="350dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/know_more_about_segregration"        />
           <TextView
               android:layout_width="160dp"
               android:layout_height="60dp"
               android:layout_marginTop="420dp"
               android:layout_marginLeft="-140dp"
               android:textColor="#000000"
               android:text="Waste Segregation Tutorials"/>
       </LinearLayout>

    <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
        android:layout_alignParentEnd="true">
       <ImageButton
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:id="@+id/checkmyPointsButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textColor="#FFFFFF"
        android:text="My Liquids"
        android:layout_marginTop="360dp"
        android:layout_marginLeft="170dp"
        android:background="@drawable/buttonpoint"/>
           <TextView
               android:layout_width="160dp"
               android:layout_height="60dp"
               android:layout_marginTop="430dp"
               android:layout_marginLeft="-120dp"
               android:textColor="#000000"
               android:text="My Liquids"/>
       </LinearLayout>

    <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">
       <ImageButton
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:id="@+id/registerComplaintButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="480dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/register_complaint"        />
           <TextView
               android:layout_width="160dp"
               android:layout_height="60dp"
               android:layout_marginTop="545dp"
               android:layout_marginLeft="-140dp"
               android:textColor="#000000"
               android:text="Complaint Box"/>
       </LinearLayout>

    <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">

       <ImageButton
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:id="@+id/promotionsButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textColor="#FFFFFF"
        android:text="Promotions"
        android:layout_marginTop="480dp"
        android:layout_marginLeft="170dp"
        android:background="@drawable/promotions"        />
           <TextView
               android:layout_width="160dp"
               android:layout_height="60dp"
               android:layout_marginTop="545dp"
               android:layout_marginLeft="-120dp"
               android:textColor="#000000"
               android:text="Promotions"/>
       </LinearLayout>

    <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">

       <ImageButton
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:id="@+id/donateUsedItemsButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="600dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/donations" />

       <TextView
           android:layout_width="160dp"
           android:layout_height="60dp"
           android:layout_marginTop="680dp"
           android:layout_marginLeft="-150dp"
           android:textColor="#000000"
           android:text="Donate Used Items"/>
       </LinearLayout>

    <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">

       <ImageButton
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:id="@+id/practiseWasteSegregationButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="600dp"
        android:layout_marginLeft="180dp"
        android:background="@drawable/practise_waste_management" />

        <TextView
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:layout_marginTop="670dp"
            android:layout_marginLeft="-140dp"
            android:textColor="#000000"
            android:text="Practise Waste Segregation"/>
       </LinearLayout>

    <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">

       <Button
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:id="@+id/referFriendButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="726dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/refer_friends" />

        <TextView
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:layout_marginTop="766dp"
            android:layout_marginLeft="-136dp"
            android:textColor="#000000"
            android:text="Refer a Friend"/>

    </LinearLayout>

    <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">

       <Button
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:id="@+id/suggestionsButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="726dp"
        android:layout_marginLeft="170dp"
        android:background="@drawable/suggestions" />

        <TextView
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:layout_marginTop="766dp"
            android:layout_marginLeft="-120dp"
            android:textColor="#000000"
            android:text="Suggestions"/>

       </LinearLayout>

   </RelativeLayout>

    </ScrollView>

</RelativeLayout>
