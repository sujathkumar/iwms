<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#FFFFFF"
    tools:context="com.iwms.cleartrash.DryGarbageActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:text="DRY Garbage Pickup"
        android:background="@android:color/transparent"
        android:padding="10dp"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textColor="#000000"
        android:textSize="16dp"
        android:text=" - Please make sure that you have segregated your Garbage properly."
        android:layout_below="@+id/editText"
        android:id="@+id/textView5" />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textColor="#000000"
        android:textSize="26dp"
        android:padding="6dp"
        android:text=" "
        android:id="@+id/garbageIdTextView"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textColor="#000000"
        android:textSize="16dp"
        android:padding="6dp"
        android:text="Please select the approximate quantity of the Garbage."
        android:id="@+id/textView4"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/quantityText" />

    <EditText
        android:layout_width="10dip"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView4"
        android:background="#dedee6"
        android:layout_alignTop="@+id/textView4"
        android:id="@+id/quantityText"
        android:layout_alignEnd="@+id/dateEditText"
        android:layout_toEndOf="@+id/editText" />

    <ImageButton
        android:layout_height="wrap_content"
        android:width="10dp"
        android:text="Know more about Waste Segregation"
        android:background="@drawable/know_more_about_segregration"
        android:textColor="#FFFFFF"
        android:layout_width="127dp"
        android:layout_column="5"
        android:id="@+id/knowSegregationButton"
        android:layout_alignTop="@+id/garbageIdTextView"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/textView4" />

    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/schedulePickupButton"
        android:text="Schedule Pickup"
        android:background="@drawable/roundedstylebutton"
        android:textColor="#FFFFFF"
        android:layout_column="5"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/timeEditText"
        android:layout_toEndOf="@+id/garbageIdTextView" />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textColor="#000000"
        android:textSize="16dp"
        android:padding="6dp"
        android:text="Select date and time of pickup"
        android:id="@+id/textView8"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/dateEditText" />

    <EditText
        android:id="@+id/dateEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="SET DATE"
        android:onClick="setDate"
        android:layout_above="@+id/timeEditText"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="Donate my DRY Waste"
        android:id="@+id/donateCheckBox"
        android:checked="false"
        android:layout_alignBaseline="@+id/schedulePickupButton"
        android:layout_alignBottom="@+id/schedulePickupButton"
        android:layout_alignParentStart="true" />

    <Spinner
        android:id="@+id/timeEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="SET TIME"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/schedulePickupButton" />

</RelativeLayout>
