<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="6dp"
    android:paddingRight="6dp"
    android:paddingTop="6dp"
    android:paddingBottom="6dp"
    android:background="@drawable/background"
    tools:context="com.iwms.cleartrash.KWSActivity$PlaceholderFragment">

    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/linearLayout1"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:weightSum="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText"
            android:text="Current Situation"
            android:background="@android:color/transparent"
            android:padding="10dp"
            android:textColor="#000000"
            android:textSize="30dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="#000000"
            android:textSize="16dp"
            android:padding="6dp"
            android:text="- Everywhere in India, Garbage is simply dumped and not recycled. Most of the cities are really messy and dirty."
            android:layout_below="@+id/editText"
            android:layout_alignParentStart="true"
            android:id="@+id/textView5" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="#000000"
            android:textSize="16dp"
            android:padding="6dp"
            android:text="- The Muncipal Solid Waste Management is one of the major concerns in Bangalore today mainly due to the accute space shortage for Garbage dumping. "
            android:id="@+id/textView3"
            android:layout_below="@+id/textView5"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="#000000"
            android:textSize="16dp"
            android:padding="6dp"
            android:text="- There is no segregation of waste at source. Everything is just mixed up and dumped with no recycling happening at any levels."
            android:id="@+id/textView4"
            android:layout_below="@+id/textView3"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="#000000"
            android:textSize="16dp"
            android:padding="6dp"
            android:text="- Landfills generates a gas mostly composed of Methane and Carbon dioxide, which causes health problems like Cancer, Renal Failure, Dengue and Gastro-Intestinal disorders to the nearby residents."
            android:id="@+id/textView6"
            android:layout_below="@+id/textView4" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="#000000"
            android:textSize="16dp"
            android:padding="6dp"
            android:text="- Everyone should have small targets and discipline and then we can see a cleaner Bangalore. "
            android:id="@+id/textView9"
            android:layout_below="@+id/textView6"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/linearLayout2"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText1"
            android:text="Need for Waste Segregation"
            android:background="@android:color/transparent"
            android:padding="10dp"
            android:textColor="#000000"
            android:textSize="26dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="#000000"
            android:textSize="16dp"
            android:padding="6dp"
            android:text="- Everywhere in India, Garbage is simply dumped and not recycled. Most of the cities are really messy and dirty."
            android:layout_below="@+id/editText1"
            android:layout_alignParentStart="true"
            android:id="@+id/textView51" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="#000000"
            android:textSize="16dp"
            android:padding="6dp"
            android:text="- If segregation is to be made after collection, it involves public money. Inorder to avoid this liability on the public, the Rules want the public to segregate the waste and then it is to be collected by the authorities."
            android:id="@+id/textView31"
            android:layout_below="@+id/textView51"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="#000000"
            android:textSize="16dp"
            android:padding="6dp"
            android:text="- It is the only way to increase the recycling rate."
            android:id="@+id/textView41"
            android:layout_below="@+id/textView31"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="#000000"
            android:textSize="16dp"
            android:padding="6dp"
            android:text="- It makes the work of the waste sorters more easy and efficient."
            android:id="@+id/textView61"
            android:layout_below="@+id/textView41" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="#000000"
            android:textSize="16dp"
            android:padding="6dp"
            android:text="- It decreases the cost of several process in the waste disposal system."
            android:id="@+id/textView91"
            android:layout_below="@+id/textView61"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="#000000"
            android:textSize="16dp"
            android:padding="6dp"
            android:text="- Moreover it dramatically reduces the amount of unsegregated mixed waste going to dump sites."
            android:id="@+id/textView11"
            android:layout_below="@+id/textView91"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/linearLayout3"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText2"
            android:text="How to Segregate Waste at Source"
            android:background="@android:color/transparent"
            android:padding="10dp"
            android:textColor="#000000"
            android:textSize="20dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="#000000"
            android:textSize="16dp"
            android:padding="6dp"
            android:text="- Waste Segregation basically means keeping wet and dry waste seperately, so that wet waste can be composted and dry can be recycled."
            android:layout_below="@+id/editText2"
            android:layout_alignParentStart="true"
            android:id="@+id/textView52" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="#000000"
            android:textSize="16dp"
            android:padding="6dp"
            android:text="- Keep seperate containers for wet and dry waste in the kitchen."
            android:id="@+id/textView32"
            android:layout_below="@+id/textView52"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="#000000"
            android:textSize="16dp"
            android:padding="6dp"
            android:text="- Keep plastic from the kitchen and clean, dry and drop in the dry waste bin. Keep glass/plastic containers rinsed of food matter."
            android:id="@+id/textView42"
            android:layout_below="@+id/textView32"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="#000000"
            android:textSize="16dp"
            android:padding="6dp"
            android:text="- Send wet waste out of the home daily. Store and send dry waste out of the home, once a week. "
            android:id="@+id/textView62"
            android:layout_below="@+id/textView42" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="#000000"
            android:textSize="16dp"
            android:padding="6dp"
            android:text="- Paper, plastics, metal, glass, rubber, thermocol, styrofoam, fabric, leather, rexine, wood - anything that can be kept for an extended period without decomposing comes under dry waste."
            android:id="@+id/textView92"
            android:layout_below="@+id/textView62"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/linearLayout4"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText3"
            android:text="Methods to Reduce Waste"
            android:background="@android:color/transparent"
            android:padding="10dp"
            android:textColor="#000000"
            android:textSize="26dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="#000000"
            android:textSize="16dp"
            android:padding="6dp"
            android:text="- Try to setup a compost bin for your organic food waste."
            android:layout_below="@+id/editText3"
            android:layout_alignParentStart="true"
            android:id="@+id/textView53" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="#000000"
            android:textSize="16dp"
            android:padding="6dp"
            android:text="- Always try to use recyclable materials."
            android:id="@+id/textView33"
            android:layout_below="@+id/textView53"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="#000000"
            android:textSize="16dp"
            android:padding="6dp"
            android:text="- Try to use your own shopping bad made of cloth or paper."
            android:id="@+id/textView43"
            android:layout_below="@+id/textView33"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="#000000"
            android:textSize="16dp"
            android:padding="6dp"
            android:text="- Always donate reusable unwanted items."
            android:id="@+id/textView63"
            android:layout_below="@+id/textView43" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="#000000"
            android:textSize="20dp"
            android:padding="10dp"
            android:text="Let Us Work Together For A Cleaner Tomorrow!"
            android:id="@+id/textView12"
            android:layout_below="@+id/textView63"
            android:layout_alignParentStart="true"
            android:layout_marginTop="64dp" />

    </RelativeLayout>

</RelativeLayout>
