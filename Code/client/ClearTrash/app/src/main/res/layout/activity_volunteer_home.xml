<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context="com.iwms.cleartrash.VolunteerHomeActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewEvent"
        android:text="My Events"
        android:textSize="20dp"
        android:padding="10dp"
        android:layout_gravity="center_horizontal"
        android:textColor="#000000"/>

    <ListView
        android:id="@+id/listviewEvent"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:cacheColorHint="#000000"
        android:padding="10dp"
        android:background="@drawable/item_bg"
        android:layout_below="@+id/textViewEvent"
        android:layout_above="@+id/textViewNCUser">
    </ListView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewNCUser"
        android:text="Non Complaint User List"
        android:textSize="20dp"
        android:padding="10dp"
        android:layout_gravity="center_horizontal"
        android:textColor="#000000"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <ListView
        android:id="@+id/listviewNCUser"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:cacheColorHint="#000000"
        android:padding="10dp"
        android:background="@drawable/item_bg"
        android:layout_below="@+id/textViewNCUser">
    </ListView>

</RelativeLayout>
