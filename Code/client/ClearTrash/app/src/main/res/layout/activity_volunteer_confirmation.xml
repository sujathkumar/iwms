<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#FFFFFF">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:text="Thank You!!"
        android:background="@android:color/transparent"
        android:padding="30dp"
        android:textColor="#000000"
        android:textSize="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textColor="#000000"
        android:textSize="16dp"
        android:padding="6dp"
        android:text="- As a volunteer, you will be a part of our public awareness program."
        android:layout_below="@+id/editText"
        android:layout_alignParentStart="true"
        android:id="@+id/textView5" />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textColor="#000000"
        android:textSize="16dp"
        android:padding="6dp"
        android:text="- You have to select your preferred Ward of operation and you will receive the list of users who are not segregating waste properly in  your ward."
        android:id="@+id/textView3"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textColor="#000000"
        android:textSize="16dp"
        android:padding="6dp"
        android:text="- You will have to give awareness to them about the need and importance of Waste Segregation."
        android:id="@+id/textView4"
        android:layout_below="@+id/textView3"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_height="wrap_content"
        android:id="@+id/acceptButton"
        android:width="10dp"
        android:text="Accept"
        android:background="@drawable/roundedstylebutton"
        android:textColor="#FFFFFF"
        android:layout_width="127dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>