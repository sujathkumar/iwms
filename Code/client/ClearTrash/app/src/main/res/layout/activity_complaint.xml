<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context="com.iwms.cleartrash.ComplaintActivity">

    <EditText
        android:layout_width="10dip"
        android:layout_height="wrap_content"
        android:background="#83edd527"
        android:id="@+id/editTextSubject"
        android:padding="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:text="Subject" />

    <EditText
        android:layout_marginTop="10dp"
        android:layout_width="10dip"
        android:layout_height="wrap_content"
        android:background="#83edd527"
        android:id="@+id/editTextDescription"
        android:gravity="top"
        android:padding="10dp"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/editTextSubject"
        android:layout_above="@+id/btnSuggest"
        android:text="Description"
        android:layout_below="@+id/editTextSubject" />

    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/btnSuggest"
        android:text="Complain"
        android:background="@drawable/roundedstylebutton"
        android:textColor="#FFFFFF"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_column="5"
        android:layout_marginTop="10dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
