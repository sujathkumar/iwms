<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/background">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText"
            android:text="A Free Kit including"
            android:background="@android:color/transparent"
            android:padding="20dp"
            android:textColor="#000000"
            android:textSize="20dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="#000000"
            android:textSize="16dp"
            android:padding="6dp"
            android:text="- Seperate bins for WET and DRY waste."
            android:layout_below="@+id/editText"
            android:layout_alignParentStart="true"
            android:id="@+id/textView5" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="#000000"
            android:textSize="16dp"
            android:padding="6dp"
            android:text="- A pack of 30 bio - degradabale garbage bags for WET waste."
            android:id="@+id/textView3"
            android:layout_below="@+id/textView5"
            android:layout_centerHorizontal="true" />

       <TextView
            android:layout_height="wrap_content"
           android:layout_width="wrap_content"
            android:textColor="#000000"
            android:textSize="16dp"
            android:padding="6dp"
            android:text="- A pack of 15 bio - degradabale garbage bags for DRY waste."
           android:id="@+id/textView4"
           android:layout_below="@+id/textView3"
           android:layout_alignParentEnd="true" />

       <TextView
            android:layout_height="wrap_content"
           android:layout_width="wrap_content"
            android:textColor="#000000"
            android:textSize="16dp"
            android:padding="6dp"
            android:text="- Instruction booklet on proper waste segregation."
           android:id="@+id/textView6"
           android:layout_below="@+id/textView4"
           android:layout_alignEnd="@+id/textView2" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="#000000"
            android:textSize="20dp"
            android:padding="10dp"
            android:text="will be sent to your Home Address."
            android:id="@+id/textView2"
            android:layout_below="@+id/textView6"
            android:layout_alignParentStart="true"
            android:layout_marginTop="33dp" />

        <Button
            android:layout_height="wrap_content"
            android:id="@+id/acceptButton"
            android:width="10dp"
            android:text="Accept"
            android:background="@drawable/roundedstylebutton"
            android:textColor="#FFFFFF"
            android:layout_width="127dp"
            android:layout_column="5"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/rejectButton"
            android:text="Reject"
            android:background="@drawable/roundedstylebutton"
            android:textColor="#FFFFFF"
            android:layout_column="5"
            android:layout_alignParentBottom="true"
            android:layout_alignEnd="@+id/textView4"
            android:layout_toEndOf="@+id/editText" />

</RelativeLayout>