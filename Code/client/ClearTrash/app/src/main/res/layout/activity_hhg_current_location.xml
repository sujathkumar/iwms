<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dip"
    android:background="@drawable/background"
    android:layout_alignParentBottom="true"
    android:layout_alignParentTop="true">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </TableRow>

    <!--  House No -->
    <TableRow>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="130dip"
            android:textColor="#000000"
            android:textSize="20dp"
            android:text="House No"/>

        <EditText
            android:layout_height="wrap_content"
            android:layout_width="240dip"
            android:textSize="20dp"
            android:textColor="#000000"
            android:id="@+id/houseNoEditText" />
    </TableRow>

    <!--  House Name -->
    <TableRow>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="130dip"
            android:textColor="#000000"
            android:textSize="20dp"
            android:text="House Name"/>

        <EditText
            android:layout_height="wrap_content"
            android:layout_width="240dip"
            android:textSize="20dp"
            android:textColor="#000000"
            android:id="@+id/houseNameEditText"/>
    </TableRow>

    <!--  Apartment Name -->
    <TableRow>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="130dip"
            android:textColor="#000000"
            android:textSize="20dp"
            android:text="Apt Name"/>

        <EditText
            android:layout_height="wrap_content"
            android:layout_width="240dip"
            android:textSize="20dp"
            android:textColor="#000000"
            android:id="@+id/aptNameEditText"/>
    </TableRow>

    <!--  Street No -->
    <TableRow>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="130dip"
            android:textColor="#000000"
            android:textSize="20dp"
            android:text="Street"/>

        <EditText
            android:layout_height="wrap_content"
            android:layout_width="240dip"
            android:textSize="20dp"
            android:textColor="#000000"
            android:id="@+id/streetEditText"/>
    </TableRow>

    <!--  Locality -->
    <TableRow>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="130dip"
            android:textColor="#000000"
            android:textSize="20dp"
            android:text="Locality"/>

        <EditText
            android:layout_height="wrap_content"
            android:layout_width="240dip"
            android:textSize="20dp"
            android:textColor="#000000"
            android:id="@+id/localityEditText"/>
    </TableRow>

    <!--  Ward -->
    <TableRow>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="130dip"
            android:textColor="#000000"
            android:textSize="20dp"
            android:text="Ward"            />

        <EditText
            android:layout_height="wrap_content"
            android:layout_width="240dip"
            android:enabled="false"
            android:textSize="20dp"
            android:textColor="#000000"
            android:id="@+id/wardEditText"/>
    </TableRow>

    <!--  City -->
    <TableRow>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="130dip"
            android:textColor="#000000"
            android:textSize="20dp"
            android:text="City"/>

        <EditText
            android:layout_height="wrap_content"
            android:layout_width="240dip"
            android:textSize="20dp"
            android:textColor="#000000"
            android:id="@+id/cityEditText"/>
    </TableRow>

    <!--  Pin code -->
    <TableRow>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="130dip"
            android:textColor="#000000"
            android:textSize="20dp"
            android:text="Pincode"/>

        <EditText
            android:layout_height="wrap_content"
            android:layout_width="240dip"
            android:textSize="20dp"
            android:textColor="#000000"
            android:id="@+id/pincodeEditText" />
    </TableRow>

<TableRow>
    <!-- Save buttonhhgarbage -->
</TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button android:id="@+id/saveButton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:textColor="#FFFFFF"
            android:text="Save"
            android:layout_column="1"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:background="@drawable/roundedstylebutton"/>
    </TableRow>

</TableLayout>

    </RelativeLayout>
